---
import { sponsors } from '../data/sponsors';

const mainSponsors = sponsors.filter(s => s.tier === 'Main');
const platinumSponsors = sponsors.filter(s => s.tier === 'Platinum');
const goldSponsors = sponsors.filter(s => s.tier === 'Gold');
const silverSponsors = sponsors.filter(s => s.tier === 'Silver');
const partnerSponsors = sponsors.filter(s => s.tier === 'Partner');
---

<section id="sponsors" class="py-20 bg-white">
  <div class="container mx-auto px-6">
    <div class="text-center mb-12">
      <h2 class="text-4xl md:text-5xl font-bold mb-4 font-google-sans-display">
        <span class="text-devfest-blue">I Nostri</span>
        <span class="text-devfest-red"> Sponsor</span>
      </h2>
      <p class="text-google-grey-700 text-lg max-w-2xl mx-auto">
        Grazie alle aziende che supportano DevFest Roma 2025 e la comunit√† degli sviluppatori.
      </p>
    </div>

    <!-- Main Sponsors -->
    {mainSponsors.length > 0 && (
      <div class="mb-16">
        <h3 class="text-2xl font-bold text-center mb-8 text-google-grey-800">Main</h3>
        <div class="flex flex-wrap justify-center gap-6 max-w-4xl mx-auto">
          {mainSponsors.map(sponsor => (
            <a 
              href={sponsor.website} 
              target="_blank" 
              rel="noopener noreferrer"
              class="bg-white p-8 rounded-google-xl shadow-material-2 hover:shadow-material-3 transition-all hover:-translate-y-1 flex items-center justify-center w-full md:w-80 border border-google-grey-200"
            >
              <img 
                src={sponsor.logo} 
                alt={`${sponsor.name} logo`}
                class="max-w-full h-auto"
              />
            </a>
          ))}
        </div>
      </div>
    )}

    <!-- Platinum Sponsors -->
    {platinumSponsors.length > 0 && (
      <div class="mb-16">
        <h3 class="text-2xl font-bold text-center mb-8 text-google-grey-800">Platinum</h3>
        <div class="flex flex-wrap justify-center gap-6 max-w-4xl mx-auto">
          {platinumSponsors.map(sponsor => (
            <a 
              href={sponsor.website} 
              target="_blank" 
              rel="noopener noreferrer"
              class="bg-white p-8 rounded-google-xl shadow-material-2 hover:shadow-material-3 transition-all hover:-translate-y-1 flex items-center justify-center w-full md:w-80 border border-google-grey-200"
            >
              <img 
                src={sponsor.logo} 
                alt={`${sponsor.name} logo`}
                class="max-w-full h-auto"
              />
            </a>
          ))}
        </div>
      </div>
    )}

    <!-- Gold Sponsors -->
    {goldSponsors.length > 0 && (
      <div class="mb-16">
        <h3 class="text-2xl font-bold text-center mb-8 text-google-grey-800">Gold</h3>
        <div class="flex flex-wrap justify-center gap-6 max-w-5xl mx-auto">
          {goldSponsors.map(sponsor => (
            <a 
              href={sponsor.website} 
              target="_blank" 
              rel="noopener noreferrer"
              class="bg-white p-6 rounded-google-lg shadow-material-2 hover:shadow-material-3 transition-all hover:-translate-y-1 flex items-center justify-center w-40 md:w-56 border border-google-grey-200"
            >
              <img 
                src={sponsor.logo} 
                alt={`${sponsor.name} logo`}
                class="max-w-full h-auto"
              />
            </a>
          ))}
        </div>
      </div>
    )}

    <!-- Silver Sponsors -->
    {silverSponsors.length > 0 && (
      <div class="mb-16">
        <h3 class="text-2xl font-bold text-center mb-8 text-google-grey-800">Silver</h3>
        <div class="flex flex-wrap justify-center gap-4 max-w-5xl mx-auto">
          {silverSponsors.map(sponsor => (
            <a 
              href={sponsor.website} 
              target="_blank" 
              rel="noopener noreferrer"
              class="bg-white p-4 rounded-google-lg shadow-material-1 hover:shadow-material-2 transition-all hover:-translate-y-0.5 flex items-center justify-center w-32 md:w-44 border border-google-grey-200"
            >
              <img 
                src={sponsor.logo} 
                alt={`${sponsor.name} logo`}
                class="max-w-full h-auto"
              />
            </a>
          ))}
        </div>
      </div>
    )}

    {partnerSponsors.length > 0 && (
      <div>
        <h3 class="text-2xl font-bold text-center mb-8 text-google-grey-800">Partner</h3>
        <div class="flex flex-wrap justify-center gap-8 max-w-5xl mx-auto">
          {partnerSponsors.map(sponsor => (
            <div class="flex flex-col items-center gap-4">
              <a 
                href={sponsor.website} 
                target="_blank" 
                rel="noopener noreferrer"
                class="bg-white p-6 rounded-google-lg shadow-material-2 hover:shadow-material-3 transition-all hover:-translate-y-1 flex items-center justify-center w-40 h-40 md:w-56 md:h-56 border border-google-grey-200"
              >
                <img 
                  src={sponsor.logo} 
                  alt={`${sponsor.name} logo`}
                  class="w-full h-full object-contain"
                />
              </a>
              <h4 class="text-lg font-semibold text-center text-google-grey-700">{sponsor.text} Partner</h4>
            </div>
          ))}
        </div>
      </div>
    )}
  </div>
</section>

